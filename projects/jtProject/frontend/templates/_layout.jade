                        ul.t-newsTags
                            li Дизайн,
                            li маркетинг,
                            li бизнес,
                            li CEO,
                            li программирование
                        span.t-newsDate 14 января
                        div.t-newsContentShare
                            span Ico
                            span Ico


mixin authorCard(changeImg, name, profession, count, likes)
    div.t-authorCardWrapper.t-scrollBar
        a(href="#").t-authorCardLink
            div.t-authorImgHolder
                img(src=""+ changeImg +"")
            div.t-authorInfo
                h1.t-authorName= name
                span.t-authorProfession= profession
                div.t-authorArticlesCountWrapper
                    span.t-name Статей
                    span.t-authorArticlesCount= count
                ul.t-authorTags
                    li Дизайн,
                    li бизнес,
                div.t-authorLikesHolder
                    span ico
                    span.t-authorLikesCount= likes

mixin topCard(pageName, listOne, listTwo, listThird, listFour, listFive, listSix)
    div.t-mainTopContentInside
        div.t-nameAndSortWrapper
            span.t-namePage= pageName
            div.t-topSortWrapper
                span.t-topSortName По дате
                span.t-icon Ico
        ul.t-topListCtrl.t-topMiddleSection
            li
                a(href="#").t-topSortLinks.active= listOne
            li
                a(href="#").t-topSortLinks= listTwo
            li
                a(href="#").t-topSortLinks= listThird
            li
                a(href="#").t-topSortLinks= listFour
            li
                a(href="#").t-topSortLinks= listFive
            li
                a(href="#").t-topSortLinks= listSix
            li
                a(href="#").t-topSortLinks ico
        ul.t-topListCtrl.t-topRightSection
            li ico
            li ico
            li ico

mixin authorsModal()
    div.t-authorModal
        div.t-authorModalInfo
            h1.t-authorModalName.t-titleUltraLarge Джон Тривольта
            h2.t-authorModalProfession.t-titleLarge Угонщик
            div.t-authorModalCountWrapper
                span.t-name Статей
                span.t-authorArticlesCount 2
            ul.t-authorModalTags
                li Дизайн,
                li бизнес,
            div.t-authorModalLikesHolder
                span ico
                span.t-authorLikesCount 475
            div.t-authorModalAbout
                h1.t-authorModalAboutTitle.t-titleBig О себе
                p.t-authorModalDescription Минкомсвязи отказалось от требования рассчитывать объём хранилищ данных пользователей на основании максимальной ширины канала операторов связи. Это должно снизить затраты операторов, пишет «Коммерсантъ» со ссылкой на копию письма замглавы Минкомсвязи Дмитрия Алхазова в Российский союз промышленников и предпринимателей (РСПП).
            div.t-authorModalAnotherProfiles
                ul
                    li
                        a(href="#") Facebook
                    li
                        a(href="#") Telegram
            div.t-authorModalArticlesHolderWrapper
                h1.t-authorModalAboutTitle.t-titleBig Статьи автора
                div.t-authorArticlesHolder
                    - for(var i = 0; i < 3; i++)
                        + authorArticles()
        div.t-authorModalPhoto
            img(src="images/photos/John.png")

